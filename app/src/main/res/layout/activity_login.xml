<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint">

    <View
        android:id="@+id/deco_circle_login"
        android:layout_width="494dp"
        android:layout_height="399dp"
        android:layout_marginStart="-63dp"
        android:layout_marginTop="-167dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/light_fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/another_deco_circle_login"
        android:layout_width="525dp"
        android:layout_height="352dp"
        android:layout_marginStart="-108dp"
        android:layout_marginTop="-168dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/another_deco_background2"
        android:layout_width="230dp"
        android:layout_height="312dp"
        android:layout_marginStart="-40dp"
        android:layout_marginTop="-80dp"
        android:rotation="129"
        android:text="@string/background_dollar_symbol"
        android:textColor="@color/dark_green"
        android:textSize="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/holder_login"
        android:layout_width="347dp"
        android:layout_height="483dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_rectangle_shape"
        android:backgroundTint="@color/light_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_login" />

    <Button
        android:id="@+id/login_now_button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/main_loginButton"
        android:textSize="24sp"
        app:backgroundTint="@color/orange"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintStart_toStartOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/password_input_text" />

    <ImageView
        android:id="@+id/logo_login"
        android:layout_width="218dp"
        android:layout_height="138dp"
        app:layout_constraintBottom_toBottomOf="@+id/deco_circle_login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.242"
        app:srcCompat="@drawable/fin_simple_logo" />

    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/login_title_text"
        android:textColor="@color/brown"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintStart_toStartOf="@+id/holder_login"
        app:layout_constraintTop_toTopOf="@+id/holder_login" />

    <TextView
        android:id="@+id/email_text_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="196dp"
        android:text="@string/company_name_text"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:layout_marginEnd="240dp"
        android:text="@string/password_text"
        android:textColor="@color/brown"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/login_title" />

    <EditText
        android:id="@+id/email_input_text"
        android:layout_width="298dp"
        android:layout_height="43dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintHorizontal_bias="0.479"
        app:layout_constraintStart_toStartOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/email_text_login" />

    <EditText
        android:id="@+id/password_input_text"
        android:layout_width="299dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintStart_toStartOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/password_text" />

    <TextView
        android:id="@+id/go_to_register_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:padding="10dp"
        android:text="@string/register_text_action"
        android:textColor="@color/light_fancy_blue"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/holder_login"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/holder_login"
        app:layout_constraintTop_toBottomOf="@+id/login_now_button" />

    <ImageButton
        android:id="@+id/back_button_login"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>