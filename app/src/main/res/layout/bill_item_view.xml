<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/bill_dashed_line_up"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintBottom_toTopOf="@+id/bill_view_holder"
        app:layout_constraintStart_toStartOf="parent" />

    <View
        android:id="@+id/bill_dashed_line_down"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@drawable/dashed_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bill_view_holder" />

    <View
        android:id="@+id/bill_view_holder"
        android:layout_width="wrap_content"
        android:layout_height="123dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_rectangle_shape"
        android:backgroundTint="@color/bold_dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bill_title_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="TextView"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/bill_view_holder"
        app:layout_constraintTop_toTopOf="@+id/bill_view_holder" />

    <TextView
        android:id="@+id/bill_description_text"
        android:layout_width="381dp"
        android:layout_height="71dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@+id/bill_view_holder"
        app:layout_constraintTop_toBottomOf="@+id/bill_title_text" />

    <ImageView
        android:id="@+id/information_bill_biew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="@+id/bill_view_holder"
        app:layout_constraintTop_toTopOf="@+id/bill_view_holder"
        app:srcCompat="@drawable/info_icon" />

    <TextView
        android:id="@+id/bill_date_text"
        android:layout_width="51dp"
        android:layout_height="18dp"
        android:layout_marginEnd="1dp"
        android:text="TextView"
        android:textAlignment="textEnd"
        android:textColor="@color/brown"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/bill_view_holder"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>